#!/bin/bash

set -e

# echo "=====> installing system updates"
# sudo apt-get update
# sudo apt-get dist-upgrade -y

echo "=====> installing ansible via ppa"
sudo apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 6425F1DA5504681D
sudo add-apt-repository 'deb http://ppa.launchpad.net/rquillo/ansible/ubuntu raring main'
sudo apt-get update
sudo apt-get install -y ansible

echo "=====> installing git"
sudo apt-get install -y git

echo "=====> enabling passwordless sudo for user $USER"
echo "$USER ALL=(ALL) NOPASSWD: ALL" | sudo tee /etc/sudoers.d/$USER
sudo chmod 0440 /etc/sudoers.d/$USER

echo "=====> done"

